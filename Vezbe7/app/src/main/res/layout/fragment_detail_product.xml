<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.products.DetailProduct"
    android:id="@+id/nav_product_detail">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/product_detail_title"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Title"
                android:fontFamily="sans-serif-medium"
                android:textSize="40dp" />
            <ImageButton
                android:id="@+id/deleteProductButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/round_border_background"
                android:contentDescription="Delete product"
                app:srcCompat="@drawable/ic_delete"
                android:clickable="true"/>
            <ImageButton
                android:id="@+id/editProductButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="4dp"
                android:background="@drawable/round_border_background"
                android:contentDescription="Edit product"
                app:srcCompat="@drawable/ic_edit"
                android:clickable="true"/>
        </LinearLayout>
        <TextView
            android:id="@+id/product_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Id"
            android:fontFamily="sans-serif-light"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/product_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Description"
            android:fontFamily="sans-serif-light"
            android:textSize="20dp"/>
        <ImageView
            android:id="@+id/product_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/samsung_galaxy_s23_ultra_green"
            android:contentDescription="@string/samsung_galaxy_s23_ultra_gray" />

    </LinearLayout>
</FrameLayout>